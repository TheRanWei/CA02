<h1> Hi <%= user.username %>, welcome to your pantry! </h1>

  <div class="row">
    <div class="col">
      <p> You have the following ingredients: </p>
    
      <ul class="list-group">
        <% ingredients.forEach(ingredient => { %>
            <li class="list-group-item">
                <span class="">
                    <a href="/pantry/remove/<%=ingredient._id %>">
                      <i class="bi bi-trash"></i>
                    </a>
                </span>
                <span class="mx-5">
                  <%= ingredient.name %>
                </span>  
                <span class="">
                    <a href="/pantry/cook/<%=ingredient._id %>">
                      <button>cook</button>
                    </a>
                </span> 
            </li>
            <br>
        <% }) %>

        <br>
        <a href="/pantry/recipe">
          <button>Available Recipie</button>
        </a>
        <br>


        <form method="post" action="/pantry/addIngredient">
            name: <input type="text" name="name" required>
            <br>
            amount: <input type="number" name="amount">
            <br>
            category: <input type="text" name="category">
            <br>
            date: <input type="date" name="date">
            <input type="submit" value="store">
        </form>
      </div>
      <div class="col">
        <p>
      </div> 
    </div>
</div>